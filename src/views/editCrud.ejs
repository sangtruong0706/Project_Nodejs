<div class="row">
  <form action="/put-crud" method="POST">
    <h3>Edit user</h3>
    <div class="row">
      <div class="form-group col-md-6">
        <label for="email" class="form-label">First Name:</label>
        <input
          type="text"
          class="form-control"
          placeholder="Enter email"
          name="firstName"
          value="<%= data.rows.firstName %>"
        />
      </div>
      <div class="form-group col-md-6">
        <label for="pwd" class="form-label">Last Name:</label>
        <input
          type="text"
          class="form-control"
          placeholder="Enter password"
          name="lastName"
          value="<%= data.rows.lastName %>"
        />
      </div>
    </div>
    <div class="form-group col-md-12">
      <label for="inputCity">Address</label>
      <input
        type="text"
        class="form-control"
        name="address"
        value="<%= data.rows.address %>"
      />
    </div>
    <input type="hidden" name="id" value="<%= data.rows.id %>">
    <button class="btn btn-primary my-3" type="submit" class="btn btn-primary">
      Update
    </button>
  </form>
</div>
